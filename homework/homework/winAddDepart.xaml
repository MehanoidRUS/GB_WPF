<Window x:Class="homework.WinAddDepart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework"
        mc:Ignorable="d"
        Title="Добавить отдел" Height="120" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="20" Margin="10,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,11,0,0" TextWrapping="Wrap" Text="Название отдела:" VerticalAlignment="Top"/>
        <Button x:Name="btnOk" Content="Добавить" HorizontalAlignment="Left" Margin="95,55,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="185,55,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
